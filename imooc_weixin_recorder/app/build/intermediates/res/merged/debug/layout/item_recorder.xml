<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="5dp" >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/icon" />

    <FrameLayout 
        android:id="@+id/fl_recorder_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_icon"
        android:background="@drawable/chatto_bg_focused">
        <View 
            android:id="@+id/view_recorder_anim"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/adj"/>
    </FrameLayout>
    
    <TextView 
        android:id="@+id/tv_recorder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/fl_recorder_length"
        android:text=""
        android:textColor="#ff777777"/>
</RelativeLayout><!-- From: file:/Users/huangminzheng/learn_and_work/hmz_github/imooc_zhy/imooc_weixin_recorder/app/src/main/res/layout/item_recorder.xml -->